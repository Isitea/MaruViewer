{
  "name": "maruviewer.electron.isitea",
  "productName": "Maru Viewer",
  "author": "Isitea <isitea@isitea.net> (http://isitea.net/)",
  "description": "Desktop application version of MaruCleaner(chrome extension)",
  "version": "0.0.1",
  "main": "app/backend/server.js",
  "devDependencies": {
    "electron": "1.8.2"
  },
  "repository": {
    "type": "git",
    "url": "https://Isitea@bitbucket.org/Isitea/maru-viewer-with-electron.git"
  },
  "license": "MIT",
  "postinstall": "electron-builder install-app-deps",
  "scripts": {
    "build:osx": "build --mac",
    "build:linux": "npm run build:linux32 && npm run build:linux64",
    "build:linux32": "build --linux --ia32",
    "build:linux64": "build --linux --x64",
    "build:win": "npm run build:win32 && npm run build:win64",
    "build:win32": "build --win --ia32",
    "build:win64": "build --win --x64"
  },
  "build": {
    "productName": "Maru Viewer",
    "appId": "net.isitea.electron.maruviewer",
    "copyright": "Copyright @ 2018 Isitea",
    "buildVersion": "0.1.0",
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerHeaderIcon": "app/resource/icon.png"
    },
    "directories": {
      "output": "dist/",
      "app": "app"
    },
    "publish": {
      "provider": "github",
      "owner": "Isitea"
    }
  }
}
